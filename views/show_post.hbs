<div class="container mt-3">
  <div class="row">
    <div class="col">
      <img class="img-fluid post-img" src="{{post.imageUrl}}">
      <h1 class="display-5">{{post.title}}</h1>
      <p>{{{post.content}}}</p>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col">
      <a class="btn btn-warning text-white" href="/posts/{{post._id}}/edit">Edit</a>
      <a class="btn btn-danger" href="/posts/{{post._id}}/delete">Delete</a>
    </div>
  </div>
</div>
